<section class="section-title" data-background="{{ theme.mainColor }}" data-transition="{{ theme.specialTransition }}">
	<img src="images/logo.png" alt="Logo" />
	<h1>{{ title }}</h1>
	<h3>{{ subtitle }}</h3>
</section>

	<section>
		<h2>{{ greetingText }}</h2>
		<p>My name is {{ authorName }}</p>
		<p><a href="{{ authorWebsite.href }}">{{ authorWebsite.text }}</a>
	</section>

	<section>
		<h2>Presentation Overview</h2>
		<ul>
			{{#each sections }}
				<li class="fragment">{{ title }}</li>
			{{/each }}
		</ul>
	</section>
